---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="RailDevHub - AI & Software Development for Railways">
  <Header />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-gradient-to-br from-primary-50 via-white to-blue-50">
    <div class="section-container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold text-railway-steel mb-6 leading-tight">
          Building the Future of <span class="text-primary-600">Railway Technology</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed">
          Combining the power of AI and software to build amazing projects
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/projects" class="btn-primary">
            View Our Projects
          </a>
          <a href="/about" class="btn-secondary">
            Learn More
          </a>
        </div>
      </div>

      <!-- Stats -->
      <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl font-bold text-primary-600 mb-2">15+</div>
          <div class="text-gray-600 font-medium">Expert Team Members</div>
        </div>
        <div class="text-center p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl font-bold text-primary-600 mb-2">10+</div>
          <div class="text-gray-600 font-medium">Technologies</div>
        </div>
        <div class="text-center p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-4xl font-bold text-primary-600 mb-2">2</div>
          <div class="text-gray-600 font-medium">Major Platforms</div>
        </div>
      </div>

      <!-- Stories Callout -->
      <div class="mt-12 text-center">
        <a href="/stories" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold text-lg transition-colors duration-200 group">
          Read Our Transformation Stories
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Background decoration -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary-100 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-pulse"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-100 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-pulse" style="animation-delay: 2s;"></div>
  </section>

  <!-- Core Values Section -->
  <section class="py-20 bg-white">
    <div class="section-container">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-railway-steel mb-4">
          Our Core Values
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We are committed to delivering excellence through our fundamental principles
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Security -->
        <div class="group p-8 bg-white border-2 border-gray-100 rounded-2xl hover:border-primary-500 hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-railway-steel mb-3">Security First</h3>
          <p class="text-gray-600">
            Enterprise-grade security measures to protect critical railway infrastructure and data
          </p>
        </div>

        <!-- Performance -->
        <div class="group p-8 bg-white border-2 border-gray-100 rounded-2xl hover:border-primary-500 hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-railway-steel mb-3">High Performance</h3>
          <p class="text-gray-600">
            Optimized systems capable of handling large-scale railway operations in real-time
          </p>
        </div>

        <!-- Modern Design -->
        <div class="group p-8 bg-white border-2 border-gray-100 rounded-2xl hover:border-primary-500 hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-railway-steel mb-3">Modern Design</h3>
          <p class="text-gray-600">
            Intuitive, user-friendly interfaces built with the latest design principles
          </p>
        </div>

        <!-- Quality -->
        <div class="group p-8 bg-white border-2 border-gray-100 rounded-2xl hover:border-primary-500 hover:shadow-xl transition-all duration-300">
          <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-railway-steel mb-3">Quality Products</h3>
          <p class="text-gray-600">
            Rigorous testing and best practices ensure reliable, production-ready solutions
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Preview Section -->
  <section class="py-20 bg-gradient-to-br from-railway-steel via-railway-track to-railway-steel text-white">
    <div class="section-container">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-4">
          Cutting-Edge Technology Stack
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          We leverage the latest AI and software technologies to deliver exceptional results
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
        <!-- AI Technologies -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold">Artificial Intelligence</h3>
          </div>
          <ul class="space-y-3">
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Large Language Models (LLM)
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              AI Agents & A2A
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Big Data Analytics
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Multi-Criteria Planning (MCP)
            </li>
          </ul>
        </div>

        <!-- Software Engineering -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-railway-signal rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold">Software Engineering</h3>
          </div>
          <ul class="space-y-3">
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Java & SpringBoot
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              React & Modern Web
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Microservices Architecture
            </li>
            <li class="flex items-center text-gray-200">
              <svg class="w-5 h-5 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Kubernetes & Docker
            </li>
          </ul>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/expertise" class="inline-flex items-center px-8 py-4 border-2 border-white text-base font-medium rounded-lg text-white hover:bg-white hover:text-railway-steel focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white transition-all duration-200">
          Explore All Technologies
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Stories Section -->
  <section class="py-20 bg-gray-50">
    <div class="section-container">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-railway-steel mb-4">
          Our Transformation Stories
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Behind every project is an inspiring journey from vision to reality
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        <!-- RayNext Story Card -->
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-gray-100 hover:border-primary-500">
          <div class="bg-gradient-to-br from-primary-600 to-primary-700 p-6">
            <div class="text-white">
              <div class="inline-block px-3 py-1 bg-white/20 rounded-full text-sm font-semibold mb-3">
                Digital Transformation
              </div>
              <h3 class="text-2xl font-bold mb-2">RayNext Story</h3>
              <p class="text-primary-100">The Future of Digital Railway</p>
            </div>
          </div>
          <div class="p-6">
            <p class="text-gray-700 mb-4 leading-relaxed">
              A journey from Ankara to Istanbul - building the bridge between traditional railway operations and the digital future. From type approval to train driver management, everything digitalized.
            </p>
            <div class="flex items-center text-sm text-gray-600 mb-4">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              Ankara → Istanbul
            </div>
            <a href="/stories#raynext" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-colors duration-200 group-hover:translate-x-1">
              Read the Story
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>

        <!-- RayData Story Card -->
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-gray-100 hover:border-railway-signal">
          <div class="bg-gradient-to-br from-railway-signal to-red-600 p-6">
            <div class="text-white">
              <div class="inline-block px-3 py-1 bg-white/20 rounded-full text-sm font-semibold mb-3">
                Data Analytics
              </div>
              <h3 class="text-2xl font-bold mb-2">RayData Story</h3>
              <p class="text-red-100">The Power of Railway Data</p>
            </div>
          </div>
          <div class="p-6">
            <p class="text-gray-700 mb-4 leading-relaxed">
              A data revolution rising from Istanbul, empowering decision-makers in Ankara. 3 dashboards, 100+ reports, and the transformation of numbers into actionable insights for Turkey's railways.
            </p>
            <div class="flex items-center text-sm text-gray-600 mb-4">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              Istanbul → Ankara
            </div>
            <a href="/stories#raydata" class="inline-flex items-center text-railway-signal hover:text-red-600 font-semibold transition-colors duration-200 group-hover:translate-x-1">
              Read the Story
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/stories" class="inline-flex items-center px-8 py-4 bg-primary-600 text-white text-lg font-semibold rounded-lg hover:bg-primary-700 transition-all duration-200 shadow-lg hover:shadow-xl">
          Read All Stories
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <div class="section-container">
      <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-3xl shadow-2xl overflow-hidden">
        <div class="px-8 py-16 md:px-16 md:py-20 text-center">
          <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-4">
            Ready to Transform Railway Operations?
          </h2>
          <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
            Discover how our innovative solutions are revolutionizing the railway industry
          </p>
          <a href="/projects" class="inline-flex items-center px-8 py-4 bg-white text-primary-600 text-lg font-semibold rounded-lg hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl">
            View Our Projects
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
